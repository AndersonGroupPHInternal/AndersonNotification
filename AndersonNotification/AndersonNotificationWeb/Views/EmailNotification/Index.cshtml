
@{
    ViewBag.Title = "Index";
}

<div ng-controller="EmailNotificationController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a href="../EmailNotification/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th>Notification ID</th>
                        <th>To</th>
                        <th>From</th>
                        <th>Subject</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="notification in model.Notifications" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(notification.NotificationId)" ng-init="model.UpdateEmailNotification(notification)">
                        <td><span ng-bind="notification.NotificationId"></span></td>
                        <td><span ng-bind="notification.Sender"></span></td>
                        <td><span ng-bind="notification.Receiver"></span></td>
                        <td><span ng-bind="notification.Subject"></span></td>
                        <td><span ng-bind="notification.Body"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>