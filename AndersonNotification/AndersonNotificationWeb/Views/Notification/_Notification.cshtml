<input type="hidden" name="NotificationId" value="@Model.NotificationId" />
<div class="form-group">
    <div class="form-group">

        <label>To:</label>
        <input required type="text" autocomplete="off" name="Receiver" class="form-control" placeholder="Email of Receiver" value="@Model.Receiver" />
        <br />

        <label>Subject</label>
        <input required type="text" autocomplete="off" name="Subject" class="form-control" placeholder="Subject" value="@Model.Subject" />
        <br />

        <label>Body:</label>
        <input required type="text" autocomplete="off" name="Body" class="form-control" placeholder="Write your Message" value="@Model.Body" />
        <br />

        <label>From:</label>
        <input required type="text" autocomplete="off" name="Sender" class="form-control" placeholder="Email of Sender" value="@Model.Sender" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</div>
